<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chemistry_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leeph.smartlaps.ChemistryDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="가연성 액체"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="○ 각 연구실 당 가연성 액체의 보유 용량은 15리터를 초과하지 않도록 한다." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="○ 유리병 당 가연성 액체의 보관 용량은 3리터를 초과하지 않도록 한다." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="○ 플라스틱 병 당 가연성 액체의 보관 용량은 0.5리터를 초과하지 않도록 한다. " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="○ 내화성 보관함에 가연성 액체을 보관할 경우에는 연구실 당 100리터를 초과하지 않도록 한다." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="○ 인화성 물질의 취급 장소에는 소화기를 반드시 비치하여야 한다." />
    </LinearLayout>

</RelativeLayout>
